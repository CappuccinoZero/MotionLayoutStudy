<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ConstraintSet
        android:id="@+id/activity_main_start">
        <Constraint
            android:id="@id/image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/dangao"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:transitionEasing="accelerate"
            android:alpha="0.3"
            android:elevation="0dp"
            android:rotation="90"
            android:scaleX="1.5"
            android:translationX="100dp"
            >
        </Constraint>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/activity_main_end">
        <Constraint
            android:translationX="-100dp"
            android:scaleY="1.5"
            android:rotation="180"
            android:elevation="8dp"
            android:alpha="1"
            app:transitionEasing="decelerate"
            android:id="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/dangao"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </Constraint>
    </ConstraintSet>
    <Transition
        app:constraintSetStart="@id/activity_main_start"
        app:constraintSetEnd="@id/activity_main_end"
        app:duration="1000">
        <OnClick
            app:targetId="@id/image"
            />
    </Transition>
</MotionScene>